- fields = t "division_of_property.#{type}.#{tab}"

.fields.mt--20.mb-60
  - fields.each do |field, text|
    - field_rendered = false

    - if field.to_s.starts_with? 'faq'
      = faq_section "division_of_property.#{type}.#{tab}.#{field}"
    - else
      .field.my-40
        - text.each do |line|

          - case line
          - when 'TEXT_FIELD'
            .form-group
              = @f.text_field "data[#{type}][#{tab}][#{id}][#{field}]",
                class: 'form-control',
                data: { \
                  parsley_required_field: true,
                  parsley_validate_if_empty: true,
                  parsley_error_message: t('property.error.required') }

          - when 'NUMBER_FIELD'
            .form-group
              = @f.number_field "data[#{type}][#{tab}][#{id}][#{field}]",
                class: 'form-control',
                data: { \
                  parsley_required_field: true,
                  parsley_validate_if_empty: true,
                  parsley_error_message: t('property.error.required') }

          - when 'DATE_FIELD'
            .form-group
              .input-group
                span.input-group-addon
                  i.icon.wb-calendar aria-hidden="true"
                = @f.text_field "data[#{type}][#{tab}][#{id}][#{field}]",
                  class: 'form-control',
                  data: { \
                    parsley_required_field: true,
                    parsley_validate_if_empty: true,
                    parsley_error_message: t('property.error.required'),
                    plugin: 'datepicker',
                    container: '.page',
                    language: 'sv' }
              .parsley-error

          - else
            p = line.html_safe
