= property_panel 'any_assets' do
  .form-group.mb-0
    p.mb-20 = t 'property.any_assets.info'
    label = t 'property.any_assets.label'
    .radio-custom.radio-primary
      = @f.radio_button 'data[assets_debts][any_assets]', true,
        data: { \
          parsley_required: true,
          parsley_error_message: t('property.error.required'),
          slide_target: '.if-any-assets' }
      = @f.label 'data[assets_debts][any_assets]_true', t('yes').capitalize
    .radio-custom.radio-primary
      = @f.radio_button 'data[assets_debts][any_assets]', false,
        data: { \
          parsley_required: true,
          parsley_error_message: t('property.error.required'),
          slide_target: '.if-any-assets' }
      = @f.label 'data[assets_debts][any_assets]_false', t('no').capitalize
    .parsley-error
